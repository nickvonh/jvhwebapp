extends layout

block content
	h1= title
	form#formAdditem(name="additem",method="post",action="/additem")
		div.section#first
			input#inputItemSku(type="mixed", name="sku")

			input#inputItemNumber(type="number", pattern="\d*", placeholder="Item Number", name="num")

			input#inputItemCost(type="number", pattern="\d*", placeholder="Item Cost", name="cost")

			div.ui-widget
				input#inputItemLoc(type="text", placeholder="Inventory Location", name="loc")

			input#inputItemQty(type="number", pattern="\d*", placeholder="Qty", name="qty")

			div.ui-widget
				input#inputItemCat(type="number", pattern="\d*", placeholder="Category ID", name="cat")
		
		div.section#second
			input#inputItemBrand(type="text", placeholder="Brand", name="brand")

			input#inputItemModel(type="text", placeholder="Model", name="model")

			input#inputItemDesc(type="text", placeholder="Description", name="desc")

			input#inputCondition(type="select", placeholder="Condition", name="cond")

			input#inputCondition2(type="select", placeholder="Condition 2", name="cond2")

			input#inputDetails(type="text", placeholder="Details", name="det")
		div.section#third
			input#inputShipping(type="text", placeholder="Shipping", name="shipping")

			input#inputReturns(type="text", placeholder="Returns", name="returns")

			input#inputAucPrice(type="number", pattern="\d*", placeholder="Auction Price", name="aucPrice")

			input#inputAucDays(type="number", pattern="\d*", placeholder="Auction Days", name="aucDays")

			input#inputBinPrice(type="number", pattern="\d*", placeholder="BIN Price", name="binPrice")

		button#btnSubmit(type="submit") submit